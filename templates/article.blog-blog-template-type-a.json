{
  "sections": {
    "main": {
      "type": "article-template",
      "custom_css": [
        ".article__body {margin: 0 auto; width: 90%; max-width: 620px;}",
        ".article__body img {width: 100%;}",
        ".article__body p {word-wrap: break-word; overflow-wrap: break-word;}"
      ],
      "settings": {
        "image_hero": false,
        "blog_show_tags": true,
        "blog_show_date": true,
        "blog_show_comments": true,
        "blog_show_author": false,
        "social_sharing_blog": true
      }
    },
    "blog-posts": {
      "type": "blog-posts",
      "disabled": true,
      "settings": {
        "title": "You may also like",
        "blog": "",
        "post_limit": 3,
        "blog_show_tags": false,
        "blog_show_date": true,
        "blog_show_comments": false,
        "blog_show_author": false,
        "view_all": true,
        "blog_image_size": "wide",
        "divider": false
      }
    }
  },
  "order": [
    "main",
    "blog-posts"
  ]
}
