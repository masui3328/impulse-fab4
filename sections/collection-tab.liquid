{% stylesheet %}
.tabs {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 0;
}
.tab {
  flex-grow: 1;
  list-style: none;
  text-align: center;
  padding: 0px;
  margin: 0px 15px 5px;
}
.tab span {
  font-size: calc(var(--typeHeaderSize)*.73);
  cursor: pointer;
  white-space: nowrap;
}
.tab span:hover {
  border-bottom: 2px solid;
}
.hide_content {
  display: none;
}
.display_content {
  display: block;
}
{% endstylesheet %}

